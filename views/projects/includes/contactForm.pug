h3= 'Contacts'


div(id='contactCards')


if project
  each contact in project.contacts
    script.
      load_contact("#{project.id}-#{contact.id}","#{contact.name}","#{contact.email}","#{contact.phone}","#{contact.skype}","#{contact.wechat}","#{contact.is_update_recipient}","#{contact.update_method}", true);

.panel.addnew
  .form-group
    label(for='name') Add new contact:
    input#name.form-control(type='text', placeholder='first and last name' name='name')
  .form-group
    label(for='email') Email:
    input#email.form-control(type='email', placeholder='name@email.com' name='email')
  .form-group
    label(for='phone') Phone:
    input#phone.form-control(type='text', placeholder='phone' name='phone')
  .form-group
    label(for='skype') Skype:
    input#skype.form-control(type='text', placeholder='skype id' name='skype')
  .form-group
    label(for='wechat') WeChat:
    input#wechat.form-control(type='text', placeholder='wechat id' name='wechat')
  .form-group
    label(for='is_update_recipient') Get Updates:
    input#is_recipient.form-control(type='checkbox', name='is_update_recipient')
  .form-group
    label(for='update_method') Update Method:   
    select#update_method.select.form-control.input-med(name='update_method')
      option(value='email') Email
      option(value='basecamp') Basecamp

  .form-group
    button.btn.btn-primary(type="button", onclick='insert_contact();') Add Contact
